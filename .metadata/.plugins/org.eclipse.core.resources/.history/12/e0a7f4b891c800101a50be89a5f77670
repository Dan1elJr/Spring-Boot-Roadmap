package com.sandaniel.springboot.demo.mycoolapp.rest;import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class FunRestController{
	
	@GetMapping("/")
	public String sayHello() {
		
		return "<h1>Hello World!</h1><br/><hr/>";
	}
	
	//expose a new enpoint for "workout"
	@GetMapping("/workout")
	public String getdailyWorkout() {
		return "<h1>Run a hard 5k</h1><br/><hr/>";
	}
	
	//expose a new endpoint for "fortune"
	@GetMapping("/fortune")
	public String getdailyWorkout() {
		return "<h1>Today is your lucky day</h1><br/><hr/>";
	}
}
